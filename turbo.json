{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "cacheDir": ".turbo",
  "globalDependencies": [
    "**/.env.*local",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml"
  ],
  "globalEnv": [
    "APP_TITLE",
    "SERVER_URL",
    "CLIENT_URL",
    "NEXT_PUBLIC_APP_TITLE",
    "NEXT_PUBLIC_SERVER_URL",
    "NEXT_PUBLIC_CLIENT_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
